<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFEFF"
    >

    <com.john.waveview.WaveView
        android:id="@+id/wave_viewIACT"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:above_wave_color="#739DFF"
        app:blow_wave_color="#185DFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:wave_hz="fast"
        app:wave_length="middle"/>

    <ProgressBar
        android:id="@+id/profile_iact"
        style="@style/MyProgressBarTwo"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:progress="30"
        android:secondaryProgress="100"
        android:theme="@style/MyProgressBarTwo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ProgressBar>


    <TextView
        android:id="@+id/circleIn_iact"
        android:layout_width="273dp"
        android:layout_height="176dp"
        android:layout_marginTop="39dp"
        android:layout_marginBottom="519.18dp"

        android:fontFamily="@font/autourone"
        android:gravity="top"
        android:text="JOIN OR CREATE A CIRCLE."
        android:textAppearance="@style/lets_get_st"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/psregular"
        android:gravity="center"
        android:paddingStart="10dp"
        android:text="Joining a Circle ? "
        android:textColor="#000"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/JOIN_CIRCLE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.964" />

    <TextView
        android:id="@+id/_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/psregular"
        android:gravity="center"
        android:paddingStart="10dp"
        android:text="Creating a Circle ? "
        android:textColor="#000"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/CREATE_CIRCLE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98" />

    <TextView
        android:id="@+id/entr_password_IACT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/psregular"
        android:gravity="center_horizontal|top"
        android:text="- OR -"
        android:textColor="#004710"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/CREATE_CIRCLE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/JOIN_CIRCLE"
        app:layout_constraintVertical_bias="0.438" />

    <Button
        android:id="@+id/CREATE_CIRCLE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="527dp"
        android:layout_marginBottom="87dp"
        android:background="@drawable/buttonbackground"
        android:elevation="10dp"
        android:fontFamily="@font/psbold"
        android:letterSpacing="0.20"
        android:padding="10dp"
        android:text="Create a new Circle"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.331"
        tools:targetApi="lollipop">


    </Button>

    <Button
        android:id="@+id/JOIN_CIRCLE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:layout_marginBottom="87dp"
        android:background="@drawable/buttonbackground"
        android:elevation="10dp"
        android:fontFamily="@font/psbold"
        android:letterSpacing="0.20"
        android:padding="10dp"
        android:text="JOIN CIRCLE"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.535"
        tools:targetApi="lollipop">


    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>